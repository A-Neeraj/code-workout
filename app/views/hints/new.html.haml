= semantic_form_for @hint, html: { class: "form-horizontal" } do |f|
  = f.semantic_errors
  .row
    .col-md-4
      = f.input :body, as: :string
  .row
    .col-md-4
      = f.input :exercise_version_id, as: :hidden,
        input_html: {value: @exercise_version.id}
          
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }

