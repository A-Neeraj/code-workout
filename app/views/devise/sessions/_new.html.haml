= semantic_form_for(User.new, url: session_path(User.new), html: { class: "form-horizontal" }) do |f|

  = f.inputs do
    .form-group
      = f.input :email, input_html:{ autofocus: true }
    .form-group
      = f.input :password

  = f.actions do  
    = f.submit 'Sign in', class: 'btn btn-primary'
