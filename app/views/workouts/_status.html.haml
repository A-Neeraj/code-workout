-#TODO replace with session data for user
- uid = 1
.row
  %h2
    %article
      .col-md-2
        - w.name
      .col-md-10
        - if user_signed_in?
          - uid = current_user.id
        - xp_data = Workout.xp_distribution(uid,w.id)
        = render :partial => 'workouts/progress', 
          :locals => {:xp_data => xp_data, uid: uid}
.row
  - w.all_tags.each do |t|
    =link_to(t, search_path(:search => t), method: :post, class: "tag")
.row
  %br
.row

- if exs.empty?
  .alert No exercises remaining
- else
  - userid = 1
  - if user_signed_in?
    - userid = current_user.id
  = render partial: "exercises/thumbsm", collection: exs, as: :x, locals: {uid: userid}