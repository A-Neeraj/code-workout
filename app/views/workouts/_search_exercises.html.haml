%h4 Search for exercises
.row.search-area
  = form_tag search_path(params[:search]), remote: true do
    .col-md-10
      = text_field_tag :search, nil, placeholder: 'recursion', class: 'form-control', id: 'search-terms'
    .col-md.2
      = submit_tag 'Search', class: 'btn btn-inverse'
.row
  .search-results
    Enter search terms above and choose results you want to add!
