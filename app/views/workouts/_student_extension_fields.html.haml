%tr.extension.fields
  %td
    = collection_select nil, nil, students, :id, :display_name, { prompt: 'Select students' },
      { class: 'student-select form-control input-sm', multiple: true }
  %td
    Extensions:
  %td
    %input.form-control.time-limit.input-sm.input{ type: 'number', min: '0', placeholder: 'Time' }
  %td
    %input.opening-datepicker{ type: 'text', class: 'form-control input-sm', placeholder: 'Opening date' }
  %td
    %input.soft-datepicker{ type: 'text', class: 'form-control input-sm', placeholder: 'Soft deadline' }
  %td
    %input.hard-datepicker{ type: 'text', class: 'form-control input-sm', placeholder: 'Hard deadline' }
  %td
    %i.fa.fa-times.action.delete-extension
