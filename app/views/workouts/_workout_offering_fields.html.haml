%tr.offering.fields{ data: { id: workout_offering.andand.id } }
  %td.course-offering{ data: { course_offering_id: course_offering.andand.id } }
    %small{style: 'font-size: small;'}
      = course_offering.andand.display_name_with_term
  %td
    %input.opening-datepicker.datepicker{ type: 'text', class: 'form-control input-sm',
      placeholder: 'Set date', data: { date: workout_offering.andand.opening_date.andand.to_i } }
  %td
    %input.soft-datepicker.datepicker{ type: 'text', class: 'form-control input-sm',
      placeholder: 'Set date', data: { date: workout_offering.andand.soft_deadline.andand.to_i } }
  %td
    %input.hard-datepicker.datepicker{ type: 'text', class: 'form-control input-sm',
      placeholder: 'Set date', data: { date: workout_offering.andand.hard_deadline.andand.to_i } }
  %td
    = check_box_tag 'published', 'published', workout_offering.andand.published, class: 'form-control published'
  %td
    = button_tag type: 'button', class: 'add-extension btn btn-sm btn-primary',
      data: { toggle: 'modal', target: '#extension-modal' } do
      Add Extension
  %td
    - if removable
      %i.fa.fa-times.action.delete-offering
