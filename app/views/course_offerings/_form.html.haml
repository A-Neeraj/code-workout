= semantic_form_for @course_offering, html: { class: "form-horizontal col-xs-10" } do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :label, input_html: { placeholder: "#{@current_user.display_name} #{Term.current_term.display_name}" }
    = f.input :term
    = f.input :url
    = f.input :cutoff_date
    = f.input :self_enrollment_allowed, label: false
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
    = f.action :cancel, as: :link, label: 'Cancel', url: organizations_path, button_html: { class: 'btn btn-default' }
