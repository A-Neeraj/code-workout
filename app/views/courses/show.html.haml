%p#notice= notice

.row
  .col-md-12
    %strong
    =@course.name + "(" + @course.number + ")"
.row
  .col-md-12
    %strong Offerings:
    -@course.course_offerings.each do |off|
      .row
        .col-md-12
          -#%a{ href: edit_course_offering_path(off), data: { toggle: 'dropdown' } }
          =link_to off.name, edit_course_offering_path(off)
            
        .span12
          =off.label


= button_link 'Edit', edit_course_path(@course)
= button_link 'Back', courses_path
