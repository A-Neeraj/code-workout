= semantic_form_for @course, html: { class: "form-horizontal" } do |f|
  = f.semantic_errors
  .row
    .col-md-4
      = f.input :organization, :as => :select
  .row
    .col-md-4
      = f.input :name, :as => :string,
        placeholder: "Intro to Java"
  .row
    .col-md-4
      = f.input :number, :as=> :string,
        placeholder: "CS101"
  .row
    .col-md-10
      %h2 Offerings
      #course_offerings
        = f.semantic_fields_for :course_offerings, html: { class: "form-horizontal" } do |o|
          = render 'course_offering_fields', :f => o
        .links
          = link_to_add_association "Add Offering...", f, :course_offerings
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
