.nested-fields
  = f.inputs do
    .row-fluid.darker-bkg
      .row-fluid
        .span3
          = f.input :term, :as => :select, :include_blank => false,
              :label => "Term",
              :collection => Term.all
        .span8
          = f.input :self_enrollment_allowed, :as => :boolean, 
            :label => "Self-Enroll",
            :input_html => { :checked => true }
      .row-fluid
        .span3
          = f.input :name, :as => :string,
            placeholder: "#12345",
            :input_html => { :class => 'span12', :rows =>1 }
        .span3
          = f.input :label, :as => :string, :required => false,
            placeholder: "MWF 9am",
            :input_html => { :class => 'span12', :rows =>1 }
      .row-fluid
        .span6
          = f.input :url, :as => :string, :required => false,
            placeholder: "http://www.school.edu/course",
            :input_html => { :class => 'span12', :rows =>1 }    