= semantic_form_for @exercise do |f|
  = f.semantic_errors
  .row-fluid
    .span10
      = f.input :title, maxlength: 50,
        placeholder: "Enter question title"
  .row-fluid
    .span10
      = f.input :question, 
        placeholder: "Enter question text",
        :input_html => { :class => 'richtexteditor autogrow span10', :rows => 5 }
  .row-fluid
    .span10
      = f.input :is_public, :label=> "Share with CodeWorkout community", 
        :input_html => { checked: 'checked', value: true }  
  .row-fluid
    .span4
      = f.input :language, :as => :select, 
        :collection => Language.all,
        :label => "Programming Language"
    .span4
      = f.input :experience, :as => :select,
        :collection => (10..100).step(10).to_a,
        :label => "Experience Points",
        :hint => "Amount gained for a correct answer"
  .row-fluid
    .span10
      = f.input :feedback, label: "Question Explanation",
        placeholder: "(optional) Exercise explanation, given after submission",
        input_html: { :class => 'richtexteditor span10', :rows => 2 }
  -#%a.btn.btn-success.btn-small{:id => "add_answer", :href => "#"}
  -#  %i.icon-white.icon-plus
  -#  click
  %h2 Answers
  .row-fluid.darker-bkg
    .span4
      = f.input :mcq_is_scrambled, 
        :label => "Randomize answers",
        :input_html => { checked: 'checked', value: true}
    .span4
      = f.input :mcq_allow_multiple, 
        :label => "Allow multiple selections",
        :input_html => { checked: 'checked', value: true}
  
  .field
  = f.semantic_fields_for :choices, @pick do |choice_fields|
    .row-fluid.darker-bkg
      .row-fluid
        .span3
          = choice_fields.input :value, :as => :boolean,
            :label => "Correct"
      .row-fluid
        .span10
          = choice_fields.input :answer, :as => :text,
            placeholder: "Enter answer text",
            :input_html => { :class => 'richtexteditor autogrow span10', :rows =>1 }
      .row-fluid
        .span10
          = choice_fields.input :feedback,
            label: "Explanation",
            placeholder: "(optional) Answer explanation, given after submission",
            input_html: { :class => 'richtexteditor autogrow span10', :rows => 2}
    .field
  -##answer-append
  -#%a.btn.btn-mini{:id => "add_answer", :href => "#"}
  -#  %i.icon-plus
  -#    Add Answer...
  = render :partial => "choices/form"
  .actions
    = f.submit