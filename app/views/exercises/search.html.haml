- uid = user_signed_in? ? current_user.id : 0
- if not(@msg.empty?)
  .alert=@msg
- if not(@wos.empty?)
  %h2 Workouts
  -# = render partial: "workouts/thumblg", collection: @wos, as: :w,
  - @wos.in_groups_of(2, false) do |row|
    = render partial: "workouts/thumblg", collection: row, as: :w,
      locals: { uid: uid }
    .clearfix

- if not(@exs.empty?)
  %h2 Individual Exercises
  - @exs.in_groups_of(2, false) do |row|
    = render partial: "exercises/thumblg", collection: row, as: :x,
      locals: { uid: uid, wid: nil }
    .clearfix
