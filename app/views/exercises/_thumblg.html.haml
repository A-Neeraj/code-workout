.well.well-small.span4
  .row-fluid.one-line
    %p.teaser-title.span10.slim
      %span.badge.badge-info
        %i.icon-bolt
      = link_to x.title, practice_path(:id => x[:id])
    .span2
      = difficulty_image(x.experience.to_i)
  .row-fluid.one-line
    -if x.tags.empty?
      &nbsp; &nbsp;
    - x.tags.each do |t|
      =link_to(t[:tag_name], search_path(:search => t[:tag_name]), method: :post, class: "tag")
  .row-fluid.one-line
    = x.teaser_text