- if session[:wexes]
  =render partial: 'workouts/status',
    locals: { w: Workout.where(id: session[:current_workout]).first,
    exs: Exercise.includes(:workouts).where(["workouts.id = ?",
    session[:current_workout]]).references(:workouts).limit(10) }
- elsif user_signed_in?
  =render partial: 'workouts/status',
    locals: { w: Workout.where(id: 2).first,
    exs: Exercise.includes(:attempts).where(["attempts.user_id = ?",
    current_user.id]).references(:attempts).limit(10) }
